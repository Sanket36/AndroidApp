<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".addVisitor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="40dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            >

            <TextView
                android:id="@+id/ivJoinUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:contentDescription="TODO"
                android:text="Add Visitor"
                android:textAlignment="center"
                android:textSize="30sp"
                android:gravity="center_horizontal" />


            <AutoCompleteTextView
                android:id="@+id/visitor_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person"
                android:hint="Name"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="40dp"/>
            <AutoCompleteTextView
                android:id="@+id/visitor_telnum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_phone"
                android:hint="Contact Number"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:inputType="phone"/>

            <AutoCompleteTextView
                android:id="@+id/txtownerFlatNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawablePadding="10dp"
                android:hint="To Flat Number"
                android:drawableLeft="@drawable/ic_apartment"
                android:drawableStart="@drawable/ic_apartment"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"/>


            <AutoCompleteTextView
                android:id="@+id/purpose"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawablePadding="10dp"
                android:hint="Purpose of Visit"
                android:drawableLeft="@drawable/ic_info"
                android:drawableStart="@drawable/ic_info"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"/>



            <AutoCompleteTextView
                android:id="@+id/vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawableLeft="@drawable/ic_car"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_car"
                android:hint="Vehicle Number"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgView"
                    android:scaleType="centerCrop"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/ic_baseline_image_24"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnTakePic"
                    android:text="Take Photo"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/btnAddVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="ADD Visitor"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/black"/>

        </LinearLayout>
    </ScrollView>





</RelativeLayout>